page {
  background-color: whitesmoke;
}

.item-view {
  width: 680rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
  padding-left: 30rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  /* align-items: center; */
  background-color: white;
  border-bottom: 0.5rpx solid whitesmoke;
}

.item-child {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
}

.item-title {
  width: 180rpx;
  font-size: 28rpx;
  color: black;
}

.left {
  width: 630rpx;
  padding-top: 10rpx;
}

.right {
  width: 50rpx;
}

.item-number {
  color: #606060;
  font-size: 30rpx;
  /* padding: 10rpx; */
  padding-bottom: 5rpx;
  /* margin-bottom: 15rpx; */
  border-bottom: 1rpx solid whitesmoke;
}

.item-info {
  color: darkgray;
  font-size: 28rpx;
  padding: 5rpx;
}

.item-content {
  color: #343434;
  font-size: 28rpx;
  padding: 5rpx;
}

.orange {
  color: orange;
}