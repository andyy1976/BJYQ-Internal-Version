/* pages/login/login.wxss */
/*--------------------------基础通用-------------------------------*/
page {
  background-color: whitesmoke;
}

.main-view {
  width: 750rpx;
}


/* 用于分隔不同功能区 */
.func-block {
  background-color: white;
  margin-top: 10rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  /* border-bottom: 0.5rpx solid lightgray;
    border-top: 0.5rpx solid lightgray;  */
}

/* 功能区标题 */
.block-header {
  color: orange;
  font-size: 30rpx;
  padding: 30rpx 0rpx 10rpx 0rpx;
}

button {
  margin: 20rpx;
  margin-top: 60rpx;
  color: white;
  font-size: 32rpx;
}

.page-footer {
  height: 80rpx;
}


/*--------------------------sd-item---用于显示不需要处理的信息-------------------------------*/

.sd-item {
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  background-color: white;
  font-size: 28rpx;
}

.sd-title {
  width: 180rpx;
  color: black;
}

.sd-content {
  background-color: white;
  margin-left: 10rpx;
  color: #606060;
}

.sd-call {
  color: blue;
  text-decoration: underline;
}

/*--------------------------sd-item---用于显示需要处理的信息-------------------------------*/

.cd-item {
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  background-color: white;
  font-size: 30rpx;
  border-bottom: 0.5rpx solid whitesmoke;
}

.cd-title {
  width: 180rpx;
  color: black;
}

.cd-content {
  background-color: white;
  width: 450rpx;
  margin-left: 10rpx;
  color: #606060;
}

.cd-radio {
  margin-left: 30rpx;
  color: #606060;
}

.cd-input {
  background-color: white;
  margin-left: 10rpx;
  color: #606060;
  width: 480rpx;
}

.cd-placeholder {
  font-size: 30rpx;
  color: lightgray;
}

/* 下拉或下一页 */
.cd-next-image {
  margin-left: 10rpx;
  /* margin-top: 10rpx; */
  width: 30rpx;
  height: 30rpx;
}


/*--------------------------图片相关----------------------------------*/

/* 用于显示图片列表 */
.images-view {
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}

.sd-image {
  width: 200rpx;
  height: 200rpx;
}

.cd-image {
  width: 200rpx;
  height: 200rpx;
}
